<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:columnCount="9"
    android:rowCount="13">

    <!-- ROW 0 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.instagram.com/chuchundrochka/"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:autoLink="web"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="8"
        />

    <!-- ROW 1 -->
    <Button
        android:id="@+id/loadimage1"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:text="моя собака"
        android:textSize="12dp" />

    <Button
        android:id="@+id/loadimage2"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:text="доп Одежда"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:textSize="12dp" />
    <ImageView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_column="4"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="12"
        android:src="@drawable/bg800_600"
        android:scaleType="fitStart"

        android:paddingTop="10dp" />
    <!-- ROW 2 -->

    <Button
        android:id="@+id/processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:visibility="gone"/>

    <!-- ROW 3 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управляй одеждой:"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:autoLink="web"
        android:layout_column="0"
        android:layout_row="3"
        android:id="@+id/textView"
        android:layout_columnSpan="8"
        />
    <!-- ROW 4 -->

    <TextView
        android:id="@+id/sourceuri1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="curX"
        android:layout_row="4"
        android:layout_column="0" />


    <TextView
        android:id="@+id/sourceuri2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_row="4"
        android:layout_column="1" />


    <!-- ROW 5 -->

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusH"
        android:layout_row="5"
        android:layout_column="0"
        android:text="&#8597;  -" />
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/plusH"
        android:layout_row="5"
        android:layout_column="1"
        android:text="&#8597; +" />
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusW"
        android:layout_row="6"
        android:layout_column="0"
        android:text="&#8596;  -" />


    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/plusW"
        android:layout_row="6"
        android:layout_column="1"
        android:text="&#8596; +" />

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/left"
        android:layout_row="5"
        android:layout_column="2"
        android:text="&#8592; " />

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/right"
        android:layout_row="5"
        android:layout_column="3"
        android:text="&#8594;" />



    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/up"
        android:layout_row="6"
        android:layout_column="2"
        android:text="&#8593;" />

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/down"
        android:layout_row="6"
        android:layout_column="3"
        android:text="&#8595;" />

    <!-- ROW 9 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Используй готовые картинки:"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:autoLink="web"
        android:layout_column="0"
        android:layout_row="9"
        android:layout_columnSpan="8"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/dog1"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="0"
        android:layout_row="10"
        android:src="@drawable/chu_small"
        android:scaleType="fitStart"
        android:layout_columnSpan="2" />

    <ImageView
        android:id="@+id/dress1"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="2"
        android:layout_row="10"
        android:src="@drawable/green_small"
        android:scaleType="fitStart"
        android:layout_columnSpan="2" />

    <ImageButton
        android:id="@+id/saveimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        android:layout_row="11"
        android:layout_column="0"
        android:src="@android:drawable/ic_menu_save"
        android:scaleType="fitStart" />

    <ImageView
        android:id="@+id/dress2"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="2"
        android:layout_row="11"
        android:src="@drawable/pink_small"
        android:scaleType="fitStart"
        android:layout_columnSpan="2" />


</GridLayout>

