<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:columnCount="8"
    android:rowCount="12">

    <!-- ROW 0 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.instagram.com/chuchundrochka/"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:layout_column="0"
        android:layout_columnSpan="8"
        android:layout_row="0"/>

    <!-- ROW 1 -->
    <Button
        android:id="@+id/loadimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:text="Собака" />
    <Button
        android:id="@+id/loadimage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Одежда"
        android:layout_columnSpan="2"
        android:layout_column="2"
        android:layout_row="1"
        />
    <Button
        android:id="@+id/processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:visibility="gone" />

    <!-- ROW 3 -->

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/up"
        android:layout_row="1"
        android:layout_column="5"
        android:text="&#8593;" />

    <ImageButton
        android:id="@+id/saveimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:visibility="visible"
        android:layout_row="4"
        android:layout_column="7"
        android:src="@android:drawable/ic_menu_save" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="29dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/btnR"
        android:layout_row="1"
        android:layout_column="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управляй одеждой:"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:autoLink="web"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/textView"
        android:layout_columnSpan="8" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusW"
        android:layout_row="3"
        android:layout_column="0"
        android:text="&#8596;  -" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/plusW"
        android:layout_row="3"
        android:layout_column="1"
        android:text="&#8596; +" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusH"
        android:layout_row="3"
        android:layout_column="2"
        android:text="&#8597;  -" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/plusH"
        android:layout_row="3"
        android:layout_column="3"
        android:text="&#8597; +" />


    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/left"
        android:layout_row="3"
        android:layout_column="4"
        android:text="&#8592;" />

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/down"
        android:layout_row="3"
        android:layout_column="5"
        android:text="&#8595;" />

    <!-- ROW 4 -->

    <TextView
        android:id="@+id/sourceuri1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="curX"
        android:layout_row="4"
        android:layout_column="0" />


    <TextView
        android:id="@+id/sourceuri2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/right"
        android:layout_row="3"
        android:layout_column="7"
        android:text="&#8594;" />

    <ImageView
        android:id="@+id/dog1"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_rowSpan="1"
        android:src="@drawable/chu_small"
        android:scaleType="fitStart" />


    <ImageView
        android:id="@+id/dress1"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_rowSpan="1"
        android:src="@drawable/green_small"
        android:scaleType="fitStart" />


    <ImageView
        android:id="@+id/dress2"
        android:layout_width="62dp"
        android:layout_height="42dp"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_row="4"
        android:src="@drawable/pink_small"
        android:scaleType="fitStart" />

    <!-- ROW 5 -->


    <ImageView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_columnSpan="8"
        android:layout_rowSpan="6"
        android:src="@drawable/bg800_600"
        android:scaleType="fitStart"

        android:paddingTop="10dp" />

</GridLayout>

